<header class="top-header">
    <div style="display: flex; align-items: center; justify-content: space-between; padding: 0 24px; height: 64px; width: 100%;">
        <!-- Logo y Tabs de navegación a la izquierda -->
        <div style="display: flex; align-items: center; gap: 16px;">
            <div style="display: flex; align-items: center; flex-shrink: 0;">
                <img src="/images/logo.png" alt="Logo Mercap" style="height: 30px; width: auto; display: block; opacity: 0.85;" onerror="this.style.display='none';" />
            </div>
            <nav class="header-tabs" style="display: flex; align-items: center; justify-content: flex-start;">
                <a href="/calculadora" class="header-tab <%= activeMenu === 'calculadora' ? 'active' : '' %>">
                    <span>Calculadora</span>
                </a>
            <a href="/cer" class="header-tab <%= activeMenu === 'cer' ? 'active' : '' %>">
                <span>CER</span>
            </a>
            <a href="/tamar" class="header-tab <%= activeMenu === 'tamar' ? 'active' : '' %>">
                <span>TAMAR</span>
            </a>
            <a href="/badlar" class="header-tab <%= activeMenu === 'badlar' ? 'active' : '' %>">
                <span>BADLAR</span>
            </a>
            <a href="/feriados" class="header-tab <%= activeMenu === 'feriados' ? 'active' : '' %>">
                <span>Feriados</span>
            </a>
            <a href="/inventario" class="header-tab <%= activeMenu === 'inventario' ? 'active' : '' %>">
                <span>Inventario</span>
            </a>
            </nav>
        </div>
        
        <!-- Botones Guardar/Cargar (solo en página de calculadora) -->
        <% if (activeMenu === 'calculadora') { %>
        <div style="display: flex; gap: 12px; align-items: center;">
            <button class="btn btn-primary" onclick="guardarCalculadora()" id="btnGuardarCalculadora">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M17 3H5c-1.11 0-2 .9-2 2v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V7l-4-4zm-5 16c-1.66 0-3-1.34-3-3s1.34-3 3-3 3 1.34 3 3-1.34 3-3 3zm3-10H5V5h10v4z"/>
                </svg>
                <span>Guardar</span>
            </button>
            <button class="btn" onclick="cargarCalculadora()" id="btnCargarCalculadora">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M19 9h-4V3H9v6H5l7 7 7-7zM5 18v2h14v-2H5z"/>
                </svg>
                <span>Cargar</span>
            </button>
        </div>
        <% } %>
    </div>
</header>

